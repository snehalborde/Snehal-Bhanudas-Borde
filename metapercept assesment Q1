package metapercept;

public class longest_word {


	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String s1="dummy text of the printing and typesetting industry.";
	
		String[] word=s1.split("");

		String longword="";
		for (int i=0; i<word.length; i++) 
			for(int j=1+i; i<word.length; j++) 
				if(word[i].length()>=word[j].length())
					longword=word[i];
					
		System.out.println(longword+"is the longest word"+longword.length()+"characters.");
	
	}
}
